@model WebPhongKham.Extension.Pager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@* asp-route-page với page là tham số tự tạo, tương ứng với tham số bên controller xử lý  *@
<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Customer" asp-action="ListCustomer" asp-route-page="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Customer" asp-action="ListCustomer" asp-route-page="@(Model.CurrentPage-1)">Previous</a>
                </li>
            }

            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage?"active":"")">
                    <a class="page-link" asp-controller="Customer" asp-action="ListCustomer" asp-route-page="@pge">@pge</a>
                </li>
            }


            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Customer" asp-action="ListCustomer" asp-route-page="@(Model.CurrentPage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Customer" asp-action="ListCustomer" asp-route-page="@Model.TotalPages">Last</a>
                </li>
            }


        </ul>
    }
</div>